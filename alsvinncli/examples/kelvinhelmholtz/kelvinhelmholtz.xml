<fvm>
  <name>
    kh
  </name>
  <platform>cuda</platform>
  <grid>
    <lowerCorner>0 0 0</lowerCorner>
    <upperCorner>1 1 0</upperCorner>
    <dimension>1024 1024 1</dimension>
  </grid>
  <boundary>periodic</boundary>
  <flux>HLL3</flux>
  <endTime>0.01</endTime>
  <equation>euler</equation>
  <equationParameters>
    <gamma>1.4</gamma>
  </equationParameters>
  <reconstruction>eno3</reconstruction>
  <cfl>0.075</cfl>
  <integrator>auto</integrator>
  <initialData>
    <python>kelvinhelmholtz.py</python>
  </initialData>
    <diffusion>
        <name>none</name>
        <reconstruction>none</reconstruction>
    </diffusion>
  <writer>
    <type>hdf5</type>
    <basename>kh</basename>
    <numberOfSaves>10</numberOfSaves>
  </writer>
</fvm>
