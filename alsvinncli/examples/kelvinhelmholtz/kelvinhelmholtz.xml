<config>
<fvm>
  <name>
    kh
  </name>
  <platform>cpu</platform>
  <grid>
    <lowerCorner>0 0 0</lowerCorner>
    <upperCorner>1 1 0</upperCorner>
    <dimension>256 256 1</dimension>
  </grid>
  <boundary>periodic</boundary>
  <flux>hll3</flux>
  <endTime>2</endTime>
  <equation>euler2</equation>
  <equationParameters>
    <gamma>1.4</gamma>
  </equationParameters>
  <reconstruction>weno2</reconstruction>
  <cfl>auto</cfl>
  <integrator>auto</integrator>
  <functionals>

<functional>
    <name>legendre_pointwise</name>
    <time>2</time>
    <timeRadius>1</timeRadius>

    <degree>1</degree>
    <minValue>0</minValue>
    <maxValue>4</maxValue>
    <variables>rho</variables>
    <writer>
        <type>netcdf</type>
        <basename>kh_legendre_pointwise_time_1</basename>
    </writer>
</functional>

<functional>
    <name>legendre_pointwise</name>
    <numberOfSaves>1</numberOfSaves>
    <degree>1</degree>

    <minValue>0.9</minValue>
    <maxValue>2.5</maxValue>
    <variables>rho</variables>
    <writer>
        <type>netcdf</type>
        <basename>kh_legendre_pointwise_1</basename>
    </writer>
</functional>
    <functional>
        <name>legendre</name>
        <time>2</time>
        <timeRadius>1</timeRadius>
        <degree_k>1</degree_k>
        <degree_n>1</degree_n>
        <degree_m>1</degree_m>
        <minValue>0</minValue>
        <maxValue>4</maxValue>
        <variables>rho</variables>
        <writer>
            <type>netcdf</type>
            <basename>kh_legendre1</basename>
        </writer>
    </functional>

    <functional>
        <name>legendre</name>
        <time>2</time>
        <timeRadius>1</timeRadius>
        <degree_k>2</degree_k>
        <degree_n>2</degree_n>
        <degree_m>2</degree_m>
        <minValue>0</minValue>
        <maxValue>4</maxValue>
        <variables>rho</variables>
        <writer>
            <type>netcdf</type>
            <basename>kh_legendre2</basename>
        </writer>
    </functional>

    <functional>
        <name>legendre</name>
        <time>2</time>
        <timeRadius>1</timeRadius>
        <degree_k>3</degree_k>
        <degree_n>3</degree_n>
        <degree_m>3</degree_m>
        <minValue>0</minValue>
        <maxValue>4</maxValue>
        <variables>rho</variables>
        <writer>
            <type>netcdf</type>
            <basename>kh_legendre3</basename>
        </writer>
    </functional>



  </functionals>
  <initialData>
    <python>kelvinhelmholtz.py</python>
    <parameters>
      <parameter>
        <name>a</name>
        <length>40</length>
        <values><value>0</value></values>
      </parameter>
    </parameters>
  </initialData>
  <diffusion>
    <name>none</name>
    <reconstruction>none</reconstruction>
  </diffusion>
  <writer>
    <type>netcdf</type>
    <basename>kh</basename>
    <numberOfSaves>10</numberOfSaves>
  </writer>
</fvm>
<uq>
  <samples>1</samples>
  <generator>auto</generator>
  <parameters>
    <parameter>
      <name>a</name>
      <length>40</length>
      <type>uniform</type>
    </parameter>
  </parameters>
  <stats>
  <stat>
    <name>
      meanvar
    </name>
    <numberOfSaves>1</numberOfSaves>
    <writer>
      <type>netcdf</type>
      <basename>kh</basename>
    </writer>
    </stat>

<stat>
  <name>
    structure_basic
  </name>
  <numberOfSaves>1</numberOfSaves>
  <direction>0</direction>
  <numberOfH>32</numberOfH>
  <p>1</p>
  <writer>
    <type>netcdf</type>
    <basename>kh_x</basename>
  </writer>
  </stat>

<stat>
  <name>
    structure_basic
  </name>
  <numberOfSaves>1</numberOfSaves>
  <direction>1</direction>
  <numberOfH>32</numberOfH>
  <p>1</p>
  <writer>
    <type>netcdf</type>
    <basename>kh_y</basename>
  </writer>
  </stat>

<stat>
  <name>
    structure_cube
  </name>
  <numberOfSaves>1</numberOfSaves>
  <numberOfH>32</numberOfH>
  <p>1</p>
  <writer>
    <type>netcdf</type>
    <basename>kh_cube</basename>
  </writer>
  </stat>

<stat>
  <name>
    bv
  </name>
  <numberOfSaves>1</numberOfSaves>
   <p>1</p>
  <writer>
    <type>netcdf</type>
    <basename>kh</basename>
  </writer>
  </stat>
  <stat>
    <name>
      bv
    </name>
    <numberOfSaves>1</numberOfSaves>
     <p>2</p>
    <writer>
      <type>netcdf</type>
      <basename>kh</basename>
    </writer>
    </stat>
    <stat>
      <name>
        bv
      </name>
      <numberOfSaves>1</numberOfSaves>
       <p>3</p>
      <writer>
        <type>netcdf</type>
        <basename>kh</basename>
      </writer>
      </stat>
  </stats>
</uq>
</config>
