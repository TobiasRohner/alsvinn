<fvm>
  <name>
    brownian
  </name>
  <platform>cpu</platform>
  <grid>
    <lowerCorner>0 0 0</lowerCorner>
    <upperCorner>1 0 0</upperCorner>
    <dimension>1024 1 1</dimension>
  </grid>
  <boundary>neumann</boundary>
  <flux>godunov</flux>
  <endTime>5</endTime>
  <equation>burgers</equation>
  <reconstruction>weno2</reconstruction>
  <cfl>auto</cfl>
  <integrator>auto</integrator>
  <initialData>
    <python>brownian.py</python>

    <parameters>
      <parameter>
        <name>X</name>
        <length>10000</length>
        <value>0</value>
      </parameter>
    </parameters>
  </initialData>
  <writer>
    <type>hdf5</type>
    <basename>brownian</basename>
    <numberOfSaves>2</numberOfSaves>
  </writer>
</fvm>
<uq>
  <samples>16</samples>
  <generator>stlmersenne</auto>
  <parameters>
    <parameter>
      <name>X</name>
      <length>10000</length>
      <type>normal</type>
    </parameter>
  </parameters>
  <stats>
    <stat>
      meanvar
    </stat>
  </stats>

</uq>
