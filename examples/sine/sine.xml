<config>
<fvm>
  <name>
    sine
  </name>
  <platform>cpu</platform>
  <grid>
    <lowerCorner>-1 0 0</lowerCorner>
    <upperCorner>1 0 0</upperCorner>
    <dimension>4096 1 1</dimension>
  </grid>
  <boundary>periodic</boundary>
  <flux>godunov</flux>
  <endTime>2</endTime>
  <equation>burgers</equation>
  <reconstruction>weno2</reconstruction>
  <cfl>auto</cfl>
  <integrator>auto</integrator>
  <initialData>
    <python>sine.py</python>
    
    <parameters>
      <parameter>
        <name>X</name>
        <length>1</length>
        <value>0</value>
      </parameter>
    </parameters>

  </initialData>
  <writer>
    <type>netcdf</type>
    <basename>sine</basename>
    <numberOfSaves>10</numberOfSaves>
  </writer>
</fvm>
<uq>
  <samples>1024</samples>
  <generator>auto</generator>
  <parameters>
    <parameter>
      <name>X</name>
      <length>1</length>
      <type>uniform</type>
    </parameter>
  </parameters>
  <stats>
    <stat>
    <name>
      meanvar
      </name>
      <numberOfSaves>1</numberOfSaves>
      <writer>
      <type>netcdf</type>
      <basename>sine</basename>
      </writer>
    </stat>
  </stats>
</uq>
</config>
